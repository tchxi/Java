// ** 5.26 (Compute e)

public class Ex5_26 {
	public static void main(String[] args) {
		int n = 10;
		double e = 1;
		
		for (int i = 1; i <= n; i++) {
			e += Math.pow(factorial(i), -1);
			
			System.out.println("e is " + e);
		}
			
	}
	
	public static int factorial(int n) {
		if (n == 0)
			return 1;
		else
			return n * factorial(n-1);
	}
}
